<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.menu.profile.information.Information"
    android:paddingHorizontal="16dp"
    android:paddingVertical="48dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:text="Hubungi Untuk Dukungan" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_height="35dp"
            app:srcCompat="@drawable/baseline_email_24"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:tint="@color/green_3" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:text="SpeedwagonGroup2019@gmail.com" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_height="35dp"
            app:srcCompat="@drawable/baseline_call_24"
            android:layout_weight="1"
            app:tint="@color/green_3"
            android:layout_width="0dp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:text="+62 812 6054 7760" />
    </LinearLayout>
    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/tv_information_toc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_weight="2"
        android:fontFamily="@font/josefinsans_bold"
        android:text="Term and Condition " />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Hak Cipta Â© Speedwagon Group." />
</LinearLayout>