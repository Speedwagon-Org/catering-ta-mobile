<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.fragment.Login"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor HP atau Username"
        tools:ignore="HardcodedText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_login_username_value"
            android:backgroundTint="@color/green_1"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:endIconMode="password_toggle"
        tools:ignore="ExtraText,HardcodedText">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_login_password_value"
            android:backgroundTint="@color/green_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_masuk"
        android:textSize="17sp"/>

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BELUM MEMILIKI AKUN ?"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_login_redirectToRegister"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:fontFamily="@font/josefinsans_bold"
        android:layout_height="wrap_content"
        android:text="@string/text_daftar"
        android:textAlignment="center"
        android:textStyle="bold"/>
</LinearLayout>